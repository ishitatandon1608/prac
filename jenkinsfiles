        stage('Checkout') {
            steps {
                // This checks out the code from the repository configured in the Jenkins job
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Replace this with your actual build command, e.g., sh 'make' or sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Replace this with your test command, e.g., sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Add deployment steps here
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
